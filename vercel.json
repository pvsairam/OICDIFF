{
  "version": 2,
  "buildCommand": "npx tsx scripts/build-api.ts && npx vite build --outDir=public",
  "outputDirectory": "public",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/api/hello",
      "destination": "/api/hello"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ]
}
